<?php
### MANAGED BY PUPPET ###

## Have a look in defaults.inc.php for examples of settings you can set here. DO NOT EDIT defaults.inc.php!

### User config
$config['user'] = '<%= @system_user %>';

### Database config
$config['db_host'] = "<%= @db_host %>";
$config['db_user'] = "<%= @db_user %>";
$config['db_pass'] = "<%= @db_pass %>";
$config['db_name'] = "librenms";
# Without this LibreNMS will default to using mysql_pconnect method, which has 
# been removed from PHP 7, and has been deprecated much earlier.
$config['db']['extension'] = "mysqli";

### Memcached config - We use this to store realtime usage
$config['memcached']['enable']  = FALSE;
$config['memcached']['host']    = "localhost";
$config['memcached']['port']    = 11211;

### Locations - it is recommended to keep the default
$config['install_dir']  = "<%= @basedir %>";

### This should *only* be set if you want to *force* a particular hostname/port
### It will prevent the web interface being usable form any other hostname
#$config['base_url']        = "http://librenms.company.com";

### Enable this to use rrdcached. Be sure rrd_dir is within the rrdcached dir
### and that your web server has permission to talk to rrdcached.
$config['rrdcached'] = "<%= @rrdcached %>";
$config['rrdtool_version'] = "<%= @rrdtool_version %>";

### Default community
$config['snmp']['community'] = array("<%= @community %>");

### Authentication Model
$config['auth_mechanism'] = "mysql"; # default, other options: ldap, http-auth

### List of RFC1918 networks to allow scanning-based discovery
$config['nets'][] = "10.0.0.0/8";
#$config['nets'][] = "172.16.0.0/12";
#$config['nets'][] = "192.168.0.0/16";

# following is necessary for poller-wrapper
# poller-wrapper is released public domain
$config['poller-wrapper']['alerter'] = FALSE;
# Uncomment the next line to disable daily updates
$config['update'] = 1;

# Poller modules
<% @l_poller_modules.each do |key, value| -%>
$config['poller_modules']['<%= key %>'] = <%= value %>;
<% end %>

# Distributed Poller-Settings
$config['distributed_poller']                            = true;
$config['distributed_poller_group']                      = '<%= @distributed_poller_group %>';
$config['distributed_poller_memcached_host']             = '<%= @distributed_poller_memcached_host %>';
$config['distributed_poller_memcached_port']             = '11211';

# Extra PHP configuration file
<% if @extra_config_file -%>
include '<%= @extra_config_file %>';
<% end -%>